<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activity.AboutUS">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            >

            <ImageView
                android:id="@+id/researjour_appLogo"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_alignStart="@+id/ourMissionText_id"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/app_icon"
                />

            <TextView
                android:id="@+id/ourMissionText_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/researjour_appLogo"
                android:layout_marginTop="24dp"
                android:text="Our Mission"
                android:textColor="#000"
                android:textSize="24sp"
                android:fontFamily="@font/googlesans_medium"
                />

            <TextView
                android:id="@+id/ourMissionDesc_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ourMissionText_id"
                android:text="@string/our_mission_desc"
                android:textColor="#333"
                android:textSize="18sp"
                android:fontFamily="@font/googlesans_regular"
                />

            <TextView
                android:id="@+id/ourStoryText_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ourMissionDesc_id"
                android:layout_marginTop="16dp"
                android:text="Our Story"
                android:textColor="#000"
                android:textSize="24sp"
                android:fontFamily="@font/googlesans_medium"
                />

            <TextView
                android:id="@+id/ourStoryDesc_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ourStoryText_id"
                android:text="@string/our_story_desc"
                android:textColor="#333"
                android:textSize="18sp"
                android:fontFamily="@font/googlesans_regular"
                />

            <TextView
                android:id="@+id/ourTeamText_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ourStoryDesc_id"
                android:layout_marginTop="16dp"
                android:text="Our Team"
                android:textColor="#000"
                android:textSize="24sp"
                android:fontFamily="@font/googlesans_medium"
                />

            <LinearLayout
                android:id="@+id/team_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/ourTeamText_id"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/shawn_id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/shawn"
                    app:civ_border_color="@color/colorAccent2"
                    app:civ_border_width="3dp"
                    android:layout_weight="1"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/sakib_id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/sakib"
                    app:civ_border_color="@color/colorAccent2"
                    app:civ_border_width="3dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/name_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team_1"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/shawn_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shawn Mahbub"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:fontFamily="@font/googlesans_medium"
                    android:gravity="center"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/sakib_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shadman Sakib"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:fontFamily="@font/googlesans_medium"
                    android:gravity="center"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/designation_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_text_id"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/shawn_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Manager"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/googlesans_regular"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/sakib_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Backend Developer"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/googlesans_regular"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/team_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/designation_text_id"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ullash_id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ullash"
                    app:civ_border_color="@color/colorAccent2"
                    app:civ_border_width="3dp"
                    android:layout_weight="1"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/nahin_id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/nahin"
                    app:civ_border_color="@color/colorAccent2"
                    app:civ_border_width="3dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/name2_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team_2"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/ullash_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mir Ullash"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:fontFamily="@font/googlesans_medium"
                    android:gravity="center"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/nahin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nazmul Nahin"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:fontFamily="@font/googlesans_medium"
                    android:gravity="center"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/designation2_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name2_text_id"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/ullash_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior UI/UX Engineer"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:fontFamily="@font/googlesans_regular"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/nahin_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior Android Engineer"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:fontFamily="@font/googlesans_regular"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/designation2_text_id"
                android:layout_alignStart="@+id/designation2_text_id"
                android:layout_alignEnd="@+id/designation2_text_id"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="12sp"
                android:text="© 2020 Researjour Limited. All rights reserved." />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>