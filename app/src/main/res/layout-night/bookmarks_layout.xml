<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:contentPadding="8dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#000">

    <RelativeLayout
        android:id="@+id/bookmarks_relativeLayout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/bookmarksResearchTitle_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:autoLink="all"
            android:fontFamily="@font/googlesans_medium"
            android:text="Research Title"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bookmarksResearchDesc_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:text="Research Description"
            android:fontFamily="@font/googlesans_regular"
            android:layout_below="@id/bookmarksResearchTitle_id"
            android:textColor="#fff"
            android:autoLink="all"
            />

        <ImageButton
            android:id="@+id/bookmarksMoreButton_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="280dp"
            android:layout_toEndOf="@+id/homeProfileImage_id"
            android:background="#000"
            android:src="@drawable/ic_more" />
    </RelativeLayout>



</androidx.cardview.widget.CardView>