<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="24dp"
    android:orientation="vertical"
    android:background="#040825"
    tools:context=".Activity.Terms">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        //image view for displaying the app logo
        <ImageView
            android:id="@+id/researjour_logo_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/app_icon_white"
            android:layout_width="191.19dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="app_logo" />

        <TextView
            android:id="@+id/termsText_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions"
            android:textSize="22sp"
            android:textColor="@color/colorAccent2"
            android:layout_below="@id/researjour_logo_id"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/googlesans_medium"
            />

        <LinearLayout
            android:id="@+id/description_layout_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/termsText_id"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms"
                android:lineSpacingExtra="2dp"
                android:textColor="#fff"
                android:fontFamily="@font/googlesans_regular"
                android:textAlignment="textStart"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_para"
                android:lineSpacingExtra="2dp"
                android:textColor="#fff"
                android:fontFamily="@font/googlesans_regular"
                android:textAlignment="textStart"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/second_para"
                android:lineSpacingExtra="2dp"
                android:textColor="#fff"
                android:fontFamily="@font/googlesans_regular"
                android:textAlignment="textStart"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/third_para"
                android:lineSpacingExtra="2dp"
                android:textColor="#fff"
                android:fontFamily="@font/googlesans_regular"
                android:textAlignment="textStart"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fourth_para"
                android:lineSpacingExtra="2dp"
                android:textColor="#fff"
                android:textSize="16sp"
                android:fontFamily="@font/googlesans_medium"
                android:textAlignment="textStart"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fifth_para"
                android:lineSpacingExtra="2dp"
                android:textColor="#fff"
                android:textSize="16sp"
                android:fontFamily="@font/googlesans_regular"
                android:textAlignment="textStart"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sixth_para"
                android:lineSpacingExtra="2dp"
                android:textColor="#fff"
                android:textSize="16sp"
                android:fontFamily="@font/googlesans_medium"
                android:textAlignment="textStart"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/seventh_para"
                android:lineSpacingExtra="2dp"
                android:textColor="#fff"
                android:fontFamily="@font/googlesans_regular"
                android:textAlignment="textStart"
                android:layout_marginTop="8dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eight_para"
                android:lineSpacingExtra="2dp"
                android:textColor="#fff"
                android:fontFamily="@font/googlesans_regular"
                android:textAlignment="textStart"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

    </RelativeLayout>



</ScrollView>